include ../quiet.mk

.PHONY: all lib clean clean-all
all: lib

_LIBS := $(shell find . -mindepth 2 -name Makefile -exec dirname {} \;  | sort)

FORCE:
$(_LIBS): FORCE
	$(MAKE) -C $@ $(TARGET)

clean: TARGET:=clean
clean: $(_LIBS)
clean-all: clean

lib: TARGET:=
lib: $(_LIBS)

